<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="pedina.pedina.PedinaFragment"
        android:longClickable="false">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:layout_width="310dp"
            android:layout_height="270dp"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/trivo_item"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="GPS tracking core"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:textColor="#ffffffff"
            android:alpha="0.7"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Lithium-polymer battery"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:textColor="#ffffffff"
            android:alpha="0.7"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="false"
            android:layout_marginBottom="21dp"
            android:layout_alignBottom="@+id/circle1"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Bluetooth for low-range tracking"
            android:id="@+id/textView4"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:textColor="#ffffffff"
            android:alpha="0.7"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@+id/circle2"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Qi for wireless charghing"
            android:id="@+id/textView5"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:textColor="#ffffffff"
            android:alpha="0.7"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/circle1"
            android:src="@drawable/circle_1"
            android:layout_marginTop="23dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/circle2"
            android:layout_toEndOf="@+id/circle2" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/circle2"
            android:src="@drawable/circle_2"
            android:layout_above="@+id/circle3"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_marginBottom="22dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/circle3"
            android:src="@drawable/circle_3"
            android:layout_above="@+id/textView5"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp"
            android:layout_marginBottom="19dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/circle4"
            android:src="@drawable/circle_4"
            android:layout_below="@+id/circle1"
            android:layout_toEndOf="@+id/circle3" />


        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="match_parent" tools:context="pedina.pedina.OurStoryFragment"
            android:orientation="vertical"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:baselineAligned="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CROWD SEARCHING"
                android:id="@+id/textView"
                android:padding="5dp"
                android:editable="false"
                android:drawableLeft="@drawable/zoom"
                android:drawableStart="@drawable/zoom" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3D PRINTED"
                android:id="@+id/textView6"
                android:padding="5dp"
                android:editable="false"
                android:drawableLeft="@drawable/tools"
                android:drawableStart="@drawable/tools" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ANONYMOUS"
                android:id="@+id/textView19"
                android:padding="5dp"
                android:editable="false"
                android:drawableLeft="@drawable/looked"
                android:drawableStart="@drawable/looked" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SECURE"
                android:id="@+id/textView20"
                android:padding="5dp"
                android:editable="false"
                android:drawableLeft="@drawable/check"
                android:drawableStart="@drawable/check" />

        </LinearLayout>

    </RelativeLayout>


</ScrollView>