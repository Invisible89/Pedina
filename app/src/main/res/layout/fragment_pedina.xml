<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="pedina.pedina.PedinaFragment"
    android:longClickable="false">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="280dp"
        android:layout_height="209dp"
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:src="@drawable/pedina_item"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="GPS tracking core"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:textColor="#ffffffff"
        android:alpha="0.7"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Lithium-polymer battery"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:textColor="#ffffffff"
        android:alpha="0.7"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp"
        android:layout_marginRight="20dp"
        android:clickable="false" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Bluetooth for low-range tracking"
        android:id="@+id/textView4"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:textColor="#ffffffff"
        android:alpha="0.7"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Qi for wireless charghing"
        android:id="@+id/textView5"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:textColor="#ffffffff"
        android:alpha="0.7"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="@drawable/circle_1"
        android:layout_marginTop="22dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView4"
        android:src="@drawable/circle_2"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView5"
        android:src="@drawable/circle_3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView6"
        android:src="@drawable/circle_4"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

</RelativeLayout>