<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="pedina.pedina.PedinaFragment"
    android:longClickable="false">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="310dp"
        android:layout_height="270dp"
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:src="@drawable/pedina_item"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="GPS tracking core"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:textColor="#ffffffff"
        android:alpha="0.7"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Lithium-polymer battery"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:textColor="#ffffffff"
        android:alpha="0.7"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="false"
        android:layout_marginBottom="21dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Bluetooth for low-range tracking"
        android:id="@+id/textView4"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:textColor="#ffffffff"
        android:alpha="0.7"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Qi for wireless charghing"
        android:id="@+id/textView5"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:textColor="#ffffffff"
        android:alpha="0.7"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="@drawable/circle_1"
        android:layout_marginTop="23dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView4"
        android:src="@drawable/circle_2"
        android:layout_above="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="22dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView5"
        android:src="@drawable/circle_3"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="19dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView6"
        android:src="@drawable/circle_4"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

</RelativeLayout>